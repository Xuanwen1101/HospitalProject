@model HospitalProject_Group3.Models.ViewModels.UpdateMedication
@{
    ViewBag.Title = "Edit";
}

<h2>Update Medication</h2>

<form action="/Medication/Update/@Model.SelectedMedication.MedicationID" method="POST">
    <div style="display:none;">
        @* Pass through the Shift ID *@
        <input type="text" name="MedicationID" value="@Model.SelectedMedication.MedicationID" />
    </div>
    <div>
        <label>Medication Brand:</label> <input type="text" name="MedicationBrand" value="@Model.SelectedMedication.MedicationBrand" />
    </div>
    <div>
        <label>Medication Name:</label> <input type="text" name="MedicationName" value="@Model.SelectedMedication.MedicationName" />
    </div>
    <div>
        <label>Detail:</label>
    </div>
    <div>
        <textarea name="MedicationDetail" rows="5" cols="30" maxlength="500">@Model.SelectedMedication.MedicationDetail</textarea>
    </div>
    <div>
        <label>Medicaiton Price:</label> <input type="text" name="Price" value="@Model.SelectedMedication.Price" />
    </div>
    <div>
        <input type="submit" value="Update Medication" />

    </div>
</form>

