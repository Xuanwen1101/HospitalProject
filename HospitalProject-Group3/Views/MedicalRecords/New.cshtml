
@model IEnumerable<HospitalProject_Group3.Models.MedicalRecordDto>
@{
    ViewBag.Title = "New";
}

<h2>Add New Donor</h2>

<form action="/MedicalRecords/Create" method="POST">
    <div>
        <label>Details:</label> <input type="text" name="RecordDetail" />
    </div>
    <div>
        <label>Date:</label> <input type="date" name="RecordDate" />
    </div>
    <div>
        <label>Patient ID:</label> <input type="text" name="PatientID" />
    </div>
    <div>
        <input type="submit" value="Add DonorTransplant" />
    </div>
</form>

